---
import TopBarCTA from "../components/TopBarCTA.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <body class="antialiased text-gray-900 bg-white">
    <!-- ðŸš€ Global Top CTA Bar -->
    <TopBarCTA />

    <!-- ðŸ§­ Main Header -->
    <Header />

    <!-- ðŸ“„ Page Content -->
    <main id="main-content" class="pt-[160px] transition-all duration-300">
      <slot />
    </main>

    <Footer />

    <script>
      window.addEventListener("DOMContentLoaded", () => {
        const header = document.getElementById("site-header");
        const topBar = document.querySelector("section.bg-red-600");
        const main = document.getElementById("main-content");
    
        if (main) main.style.paddingTop = `${topBar.offsetHeight + header.offsetHeight}px`;

        if (header && topBar) {
          const adjustPosition = () => {
            const topHeight = topBar.offsetHeight;
            header.style.top = `${topHeight}px`;
          };
    
          // Initial position + resize listener for mobile changes
          adjustPosition();
          window.addEventListener("resize", adjustPosition);
        }
      });
    </script>
    
  </body>
</html>
