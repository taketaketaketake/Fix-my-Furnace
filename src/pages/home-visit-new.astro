---
import Layout from "../layouts/Layout.astro";
import UniversalForm from "../components/UniversalForm.astro";
---

<Layout
  title="$125 Professional Home Visit | Expert Furnace Diagnosis | Fix My Furnace"
  description="Get a comprehensive $125 home visit with complete system analysis, written assessment, and expert consultation. Licensed HVAC technicians serving all of Michigan."
  keywords="furnace diagnosis, home visit, HVAC inspection, furnace repair Michigan, heating system assessment, professional diagnosis, licensed technician"
>
  <!-- SEO & Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "$125 Home Visit Furnace Diagnosis",
    "description": "Professional HVAC technician visits your home for comprehensive furnace diagnosis. Complete system analysis, written report, and expert consultation included.",
    "provider": {
      "@type": "LocalBusiness",
      "@id": "https://fixmyfurnace.com/#organization",
      "name": "Fix My Furnace Michigan",
      "image": "https://fixmyfurnace.com/group_photo.png",
      "telephone": "+1-833-394-8669",
      "priceRange": "$$",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Detroit",
        "addressRegion": "MI",
        "addressCountry": "US"
      },
      "areaServed": {
        "@type": "State",
        "name": "Michigan"
      }
    },
    "serviceType": "HVAC Diagnosis and Repair",
    "offers": {
      "@type": "Offer",
      "price": "125",
      "priceCurrency": "USD",
      "description": "Professional home visit with comprehensive diagnosis",
      "availability": "https://schema.org/InStock"
    }
  }
  </script>

  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="$125 Professional Home Visit | Expert Furnace Diagnosis">
  <meta property="og:description" content="Get a comprehensive home visit with complete system analysis, written assessment, and expert consultation.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://fixmyfurnace.com/home-visit-new">
  <meta property="og:image" content="https://fixmyfurnace.com/group_photo.png">

  <!-- HERO -->
  <section class="relative bg-gradient-to-br from-red-50 via-white to-orange-50 pt-24 pb-20">
    <div class="container mx-auto px-6 md:px-10 grid md:grid-cols-2 gap-12 items-center">
      <!-- LEFT -->
      <div>
        <div class="inline-flex items-center gap-2 bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-semibold mb-6">
          <i data-lucide="home" class="w-4 h-4"></i> Professional Home Visit
        </div>

        <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mb-6 leading-tight text-balance">
          <span class="text-red-600">$125</span> Home Visit<br />
          <span class="text-gray-700">Expert Furnace Diagnosis</span>
        </h1>

        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed">
          A licensed HVAC technician comes to your home for a comprehensive diagnosis with clear next steps — no guesswork.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a href="#booking" class="bg-red-600 text-white px-8 py-4 rounded-xl font-bold text-lg shadow-lg hover:bg-red-700 hover:scale-[1.02] transition-all text-center">
            Schedule Your Visit
          </a>
          <a href="tel:+18334948669" class="border-2 border-gray-300 text-gray-800 px-8 py-4 rounded-xl font-bold text-lg hover:border-red-600 hover:text-red-600 transition-all text-center">
            Call (833) FIX-IT-NOW
          </a>
        </div>

        <div class="flex flex-wrap gap-6 text-sm text-gray-600">
          <span class="flex items-center gap-2"><i data-lucide="shield-check" class="w-5 h-5 text-red-600"></i> Licensed & Insured</span>
          <span class="flex items-center gap-2"><i data-lucide="clock" class="w-5 h-5 text-red-600"></i> Same-Day Available</span>
          <span class="flex items-center gap-2"><i data-lucide="star" class="w-5 h-5 text-red-600"></i> Expert Technicians</span>
        </div>
      </div>

      <!-- RIGHT -->
      <div class="relative">
        <div class="relative w-full aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl">
          <img src="/group_photo.png" alt="Professional HVAC technician performing home diagnosis" class="w-full h-full object-cover" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
          <div class="absolute top-6 left-6 bg-white rounded-xl p-4 shadow-md">
            <div class="text-2xl font-bold text-red-600">$125</div>
            <div class="text-sm text-gray-600 font-medium">Professional Visit</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- WHAT'S INCLUDED SECTION -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6 md:px-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-3">
          What's Included in Your <span class="text-red-600">$125</span> Visit
        </h2>
        <p class="text-gray-600 text-lg">Comprehensive, professional diagnosis with clear next steps — no guesswork.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Complete System Analysis -->
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 hover:shadow-xl transition">
          <div class="w-14 h-14 bg-red-100 rounded-xl flex items-center justify-center mb-4">
            <i data-lucide="search" class="w-7 h-7 text-red-600"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Complete System Analysis</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            We inspect your entire heating system for hidden issues — furnace, ducts, thermostat, airflow, and more.
          </p>
          <ul class="text-sm text-gray-700 space-y-2">
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Furnace efficiency testing
            </li>
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Ductwork inspection
            </li>
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Thermostat calibration
            </li>
          </ul>
        </div>

        <!-- Written Assessment Report -->
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 hover:shadow-xl transition">
          <div class="w-14 h-14 bg-red-100 rounded-xl flex items-center justify-center mb-4">
            <i data-lucide="file-text" class="w-7 h-7 text-red-600"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Written Assessment Report</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            Get a clear, written summary of findings and transparent repair pricing.
          </p>
          <ul class="text-sm text-gray-700 space-y-2">
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Problem identification
            </li>
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Repair recommendations
            </li>
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Upfront pricing
            </li>
          </ul>
        </div>

        <!-- Expert Consultation -->
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 hover:shadow-xl transition">
          <div class="w-14 h-14 bg-red-100 rounded-xl flex items-center justify-center mb-4">
            <i data-lucide="user-check" class="w-7 h-7 text-red-600"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Expert Consultation</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            Speak directly with a licensed technician who answers all your questions.
          </p>
          <ul class="text-sm text-gray-700 space-y-2">
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Licensed technician
            </li>
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Personalized guidance
            </li>
            <li class="flex items-center gap-2">
              <i data-lucide="check" class="w-4 h-4 text-red-600"></i> Maintenance tips
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- WHAT HAPPENS NEXT -->
  <section class="py-16 bg-gradient-to-br from-gray-900 to-gray-800 text-white">
    <div class="container mx-auto px-6 md:px-10 max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-extrabold mb-4">What Happens After Your Visit?</h2>
        <p class="text-gray-300 text-lg">
          We make it easy to get your heating system fixed — no hassle, no pressure.
        </p>
      </div>

      <div class="bg-gray-800 border border-gray-700 rounded-2xl p-8">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center">
              <i data-lucide="users" class="w-6 h-6 text-white"></i>
            </div>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-3 text-white">Get Paired with a Service Provider</h3>
            <p class="text-gray-300 leading-relaxed">
              Immediately after the visit, you'll be paired with a qualified service provider to complete any needed repairs —
              <span class="font-semibold text-white">if that's what you choose</span>. There's no obligation, no pressure.
              You'll have all the information you need to make the best decision for your home and budget.
            </p>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-700">
          <div class="flex items-center gap-2 text-gray-300">
            <i data-lucide="info" class="w-5 h-5 text-red-400"></i>
            <span class="text-sm">You're always in control — choose to proceed with repairs or get a second opinion.</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- BOOKING CTA -->
  <section id="booking" class="py-20 bg-gray-50">
    <div class="container mx-auto px-6 max-w-3xl">
      <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-3">
          Schedule Your <span class="text-red-600">$125 Home Visit</span>
        </h2>
        <p class="text-gray-600 text-lg">
          Fill out the quick form below and we'll get back to you within 24 hours to confirm your appointment.
        </p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8">
        <UniversalForm
          formId="homeVisitNewForm"
          formSource="home_visit_new_landing"
          fields={[
            { name: 'name', type: 'text', label: 'Full Name', placeholder: 'Enter your full name', required: true, autoComplete: 'name' },
            { name: 'phone', type: 'tel', label: 'Phone Number', placeholder: '(833) 494-8669', required: true },
            { name: 'address', type: 'address', label: 'Service Address', placeholder: 'Enter your full address', required: true },
            {
              name: 'issue',
              type: 'select',
              label: "What's the main issue?",
              required: true,
              options: [
                'No heat at all',
                'Uneven heating throughout home',
                'Strange noises from furnace',
                'High energy bills',
                'Furnace cycles on/off frequently',
                'System is old/unreliable',
                'Poor indoor air quality',
                'Other issue'
              ]
            },
            {
              name: 'preferredTime',
              type: 'select',
              label: 'Preferred Visit Time',
              options: [
                'Any time works',
                'Morning (8AM - 12PM)',
                'Afternoon (12PM - 5PM)',
                'Evening (5PM - 8PM)',
                'Weekend availability'
              ]
            },
            { name: 'message', type: 'textarea', label: 'Additional Details (Optional)', placeholder: 'Any additional information about your system or concerns...' }
          ]}
          submitText="Schedule My $125 Home Visit"
        />

        <p class="text-sm text-gray-500 mt-6 text-center">
          By submitting this form, you agree to be contacted by Fix My Furnace for scheduling your home visit.
        </p>
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-red-600 text-white text-center">
    <div class="container mx-auto px-6 max-w-3xl">
      <h2 class="text-3xl md:text-4xl font-extrabold mb-3">Get Professional Answers Today</h2>
      <p class="text-red-100 text-lg mb-8">
        Know exactly what's wrong with your heating system. Expert diagnosis, clear solutions, transparent pricing.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#booking" class="bg-white text-red-600 px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-100 transition">Book My Visit</a>
        <a href="tel:+18334948669" class="border-2 border-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-white/10 transition">Call (833) FIX-IT-NOW</a>
      </div>
    </div>
  </section>
</Layout>

<!-- Scripts -->
<script type="module" src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') lucide.createIcons();

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>
