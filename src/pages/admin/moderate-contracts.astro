---
import Layout from "../../layouts/Layout.astro";
---

<Layout
  title="Admin: Moderate Contracts"
  description="Admin interface for moderating service contract submissions"
>
  <!-- Password Prompt (shown if not authenticated) -->
  <div id="password-prompt" class="min-h-screen bg-gray-100 flex items-center justify-center p-6">
    <div class="bg-white rounded-xl shadow-xl p-8 max-w-md w-full">
      <h1 class="text-2xl font-bold text-gray-900 mb-6 text-center">Admin Access Required</h1>
      <form id="password-form" class="space-y-4">
        <div>
          <label for="admin-password" class="block text-sm font-semibold text-gray-800 mb-2">
            Enter Admin Password
          </label>
          <input
            type="password"
            id="admin-password"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
            placeholder="Enter password"
            required
          />
        </div>
        <button
          type="submit"
          class="w-full bg-red-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-red-700 transition-colors"
        >
          Access Admin Panel
        </button>
        <p id="password-error" class="text-red-600 text-sm hidden text-center">Invalid password</p>
      </form>
    </div>
  </div>

  <!-- Admin Panel (shown after authentication) -->
  <div id="admin-panel" class="hidden min-h-screen bg-gray-100">

    <!-- Header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900">Contract Moderation</h1>
        <button
          id="logout-btn"
          class="text-sm text-gray-600 hover:text-gray-900 font-semibold"
        >
          Logout
        </button>
      </div>
    </div>

    <!-- Stats Bar -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-yellow-50 rounded-lg border border-yellow-200">
            <div id="stat-pending" class="text-2xl font-bold text-yellow-600">0</div>
            <div class="text-xs text-gray-600 font-semibold">Pending</div>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg border border-green-200">
            <div id="stat-approved" class="text-2xl font-bold text-green-600">0</div>
            <div class="text-xs text-gray-600 font-semibold">Approved</div>
          </div>
          <div class="text-center p-4 bg-red-50 rounded-lg border border-red-200">
            <div id="stat-rejected" class="text-2xl font-bold text-red-600">0</div>
            <div class="text-xs text-gray-600 font-semibold">Rejected</div>
          </div>
          <div class="text-center p-4 bg-gray-50 rounded-lg border border-gray-200">
            <div id="stat-total" class="text-2xl font-bold text-gray-900">0</div>
            <div class="text-xs text-gray-600 font-semibold">Total</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="max-w-7xl mx-auto flex gap-4">
        <select
          id="status-filter"
          class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500"
        >
          <option value="pending">Pending Only</option>
          <option value="approved">Approved Only</option>
          <option value="rejected">Rejected Only</option>
          <option value="all">All Contracts</option>
        </select>
        <button
          id="refresh-btn"
          class="px-6 py-2 bg-gray-200 text-gray-800 font-semibold rounded-lg hover:bg-gray-300 transition-colors"
        >
          Refresh
        </button>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="max-w-7xl mx-auto px-6 py-20 text-center">
      <i data-lucide="loader-2" class="w-12 h-12 text-red-600 mx-auto mb-4 animate-spin"></i>
      <p class="text-gray-600 font-semibold">Loading contracts...</p>
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="hidden max-w-7xl mx-auto px-6 py-20 text-center">
      <i data-lucide="inbox" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
      <p class="text-xl font-bold text-gray-900 mb-2">No Contracts to Review</p>
      <p class="text-gray-600">All caught up!</p>
    </div>

    <!-- Contracts Grid -->
    <div id="contracts-grid" class="hidden max-w-7xl mx-auto px-6 py-8">
      <div id="contracts-container" class="grid gap-6">
        <!-- Cards will be populated by JavaScript -->
      </div>
    </div>

  </div>

  <!-- Lucide Icons -->
  <script type="module" src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>

  <script>
    // Initialize Lucide icons
    document.addEventListener("DOMContentLoaded", () => {
      if (typeof lucide !== 'undefined') lucide.createIcons();
    });

    // Elements
    const passwordPrompt = document.getElementById('password-prompt');
    const adminPanel = document.getElementById('admin-panel');
    const passwordForm = document.getElementById('password-form');
    const passwordInput = document.getElementById('admin-password') as HTMLInputElement;
    const passwordError = document.getElementById('password-error');
    const logoutBtn = document.getElementById('logout-btn');
    const statusFilter = document.getElementById('status-filter') as HTMLSelectElement;
    const refreshBtn = document.getElementById('refresh-btn');
    const loadingState = document.getElementById('loading-state');
    const emptyState = document.getElementById('empty-state');
    const contractsGrid = document.getElementById('contracts-grid');
    const contractsContainer = document.getElementById('contracts-container');

    // Stats elements
    const statPending = document.getElementById('stat-pending');
    const statApproved = document.getElementById('stat-approved');
    const statRejected = document.getElementById('stat-rejected');
    const statTotal = document.getElementById('stat-total');

    // State
    let adminPassword = sessionStorage.getItem('adminPassword') || '';
    let allContracts: any[] = [];
    let currentStats: any = null;

    // Check if already authenticated
    if (adminPassword) {
      showAdminPanel();
    }

    // Password form submission
    passwordForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const password = passwordInput?.value;

      if (password) {
        // Test password by attempting to fetch contracts
        const testAuth = await fetchContracts(password);
        if (testAuth) {
          adminPassword = password;
          sessionStorage.setItem('adminPassword', password);
          passwordError?.classList.add('hidden');
          showAdminPanel();
        } else {
          passwordError?.classList.remove('hidden');
          passwordInput.value = '';
        }
      }
    });

    // Logout
    logoutBtn?.addEventListener('click', () => {
      sessionStorage.removeItem('adminPassword');
      adminPassword = '';
      passwordPrompt?.classList.remove('hidden');
      adminPanel?.classList.add('hidden');
    });

    // Filters
    statusFilter?.addEventListener('change', loadContracts);
    refreshBtn?.addEventListener('click', loadContracts);

    /**
     * Show admin panel and load contracts
     */
    function showAdminPanel() {
      passwordPrompt?.classList.add('hidden');
      adminPanel?.classList.remove('hidden');
      loadContracts();
    }

    /**
     * Fetch contracts from API
     */
    async function fetchContracts(password?: string): Promise<boolean> {
      try {
        const pwd = password || adminPassword;
        const status = statusFilter?.value || 'pending';
        const response = await fetch(`/api/get-pending-contracts?password=${encodeURIComponent(pwd)}&status=${status}`);
        const result = await response.json();

        if (result.success) {
          allContracts = result.contracts;
          currentStats = result.stats;
          return true;
        } else {
          return false;
        }
      } catch (error) {
        console.error('Error fetching contracts:', error);
        return false;
      }
    }

    /**
     * Load and render contracts
     */
    async function loadContracts() {
      if (!loadingState || !emptyState || !contractsGrid || !contractsContainer) return;

      // Show loading
      loadingState.classList.remove('hidden');
      emptyState.classList.add('hidden');
      contractsGrid.classList.add('hidden');

      const success = await fetchContracts();

      if (success) {
        updateStats();
        renderContracts();
      }

      loadingState.classList.add('hidden');
    }

    /**
     * Update stats display
     */
    function updateStats() {
      if (!currentStats) return;

      if (statPending) statPending.textContent = currentStats.pending.toString();
      if (statApproved) statApproved.textContent = currentStats.approved.toString();
      if (statRejected) statRejected.textContent = currentStats.rejected.toString();
      if (statTotal) statTotal.textContent = currentStats.total.toString();
    }

    /**
     * Render contracts cards
     */
    function renderContracts() {
      if (!contractsContainer || !contractsGrid || !emptyState) return;

      if (allContracts.length === 0) {
        emptyState.classList.remove('hidden');
        contractsGrid.classList.add('hidden');
        return;
      }

      // Clear existing cards
      contractsContainer.innerHTML = '';

      // Create cards
      allContracts.forEach(contract => {
        const card = createContractCard(contract);
        contractsContainer.appendChild(card);
      });

      // Re-initialize Lucide icons
      if (typeof lucide !== 'undefined') lucide.createIcons();

      // Show grid
      contractsGrid.classList.remove('hidden');
      emptyState.classList.add('hidden');
    }

    /**
     * Create contract card element
     */
    function createContractCard(contract: any): HTMLElement {
      const card = document.createElement('div');
      card.className = 'bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden';

      const submittedDate = new Date(contract.created_at).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });

      const serviceDate = contract.service_date
        ? new Date(contract.service_date).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })
        : 'N/A';

      const location = contract.city && contract.zip_code
        ? `${contract.city}, ${contract.zip_code}`
        : contract.city || contract.zip_code || 'N/A';

      const statusBadge = contract.status === 'approved'
        ? '<span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-bold">APPROVED</span>'
        : contract.status === 'rejected'
        ? '<span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-xs font-bold">REJECTED</span>'
        : '<span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-bold">PENDING</span>';

      card.innerHTML = `
        <div class="grid md:grid-cols-2 gap-6 p-6">
          <!-- Left: Image -->
          <div>
            <img
              src="${contract.contract_image_url}"
              alt="Contract image"
              class="w-full h-auto rounded-lg border border-gray-300 cursor-pointer hover:opacity-90 transition-opacity"
              onclick="window.open('${contract.contract_image_url}', '_blank')"
            />
            <p class="text-xs text-gray-500 text-center mt-2">Click to open full size</p>
          </div>

          <!-- Right: Details -->
          <div class="space-y-4">
            <div class="flex justify-between items-start">
              <h3 class="text-xl font-bold text-gray-900">${contract.service_type}</h3>
              ${statusBadge}
            </div>

            <div class="space-y-3">
              <div>
                <p class="text-xs font-bold text-gray-500 uppercase">Provider</p>
                <p class="text-lg font-semibold text-gray-900">${contract.provider_name}</p>
              </div>

              <div>
                <p class="text-xs font-bold text-gray-500 uppercase">Total Cost</p>
                <p class="text-2xl font-bold text-red-600">$${contract.total_cost.toLocaleString()}</p>
              </div>

              <div class="grid grid-cols-2 gap-3">
                <div>
                  <p class="text-xs font-bold text-gray-500 uppercase">Location</p>
                  <p class="text-sm text-gray-700">${location}</p>
                </div>
                <div>
                  <p class="text-xs font-bold text-gray-500 uppercase">Service Date</p>
                  <p class="text-sm text-gray-700">${serviceDate}</p>
                </div>
              </div>

              ${contract.work_description ? `
                <div>
                  <p class="text-xs font-bold text-gray-500 uppercase">Work Description</p>
                  <p class="text-sm text-gray-700">${contract.work_description}</p>
                </div>
              ` : ''}

              ${contract.submitter_email ? `
                <div>
                  <p class="text-xs font-bold text-gray-500 uppercase">Submitter Email</p>
                  <p class="text-sm text-gray-700">${contract.submitter_email}</p>
                </div>
              ` : ''}

              <div>
                <p class="text-xs font-bold text-gray-500 uppercase">Submitted</p>
                <p class="text-sm text-gray-700">${submittedDate}</p>
              </div>
            </div>

            <!-- Action Buttons -->
            ${contract.status === 'pending' ? `
              <div class="pt-4 border-t border-gray-200 space-y-3">
                <div class="flex gap-3">
                  <button
                    class="approve-btn flex-1 bg-green-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center gap-2"
                    data-contract-id="${contract.id}"
                  >
                    <i data-lucide="check-circle" class="w-5 h-5"></i>
                    Approve
                  </button>
                  <button
                    class="reject-btn flex-1 bg-red-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-red-700 transition-colors flex items-center justify-center gap-2"
                    data-contract-id="${contract.id}"
                  >
                    <i data-lucide="x-circle" class="w-5 h-5"></i>
                    Reject
                  </button>
                </div>
              </div>
            ` : `
              <div class="pt-4 border-t border-gray-200">
                <p class="text-sm text-gray-600 text-center">
                  ${contract.status === 'approved' ? 'This contract has been approved' : 'This contract has been rejected'}
                  ${contract.reviewed_at ? ` on ${new Date(contract.reviewed_at).toLocaleDateString()}` : ''}
                </p>
              </div>
            `}
          </div>
        </div>
      `;

      // Add event listeners to buttons
      const approveBtn = card.querySelector('.approve-btn');
      const rejectBtn = card.querySelector('.reject-btn');

      approveBtn?.addEventListener('click', () => moderateContract(contract.id, 'approve'));
      rejectBtn?.addEventListener('click', () => moderateContract(contract.id, 'reject'));

      return card;
    }

    /**
     * Moderate a contract (approve or reject)
     */
    async function moderateContract(contractId: string, action: 'approve' | 'reject') {
      if (!confirm(`Are you sure you want to ${action} this contract?`)) {
        return;
      }

      try {
        const response = await fetch('/api/moderate-contract', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            contractId,
            action,
            adminPassword
          })
        });

        const result = await response.json();

        if (result.success) {
          alert(`Contract ${action}ed successfully!`);
          loadContracts(); // Reload the list
        } else {
          alert(`Failed to ${action} contract: ${result.error}`);
        }
      } catch (error) {
        console.error('Error moderating contract:', error);
        alert(`Error: ${error}`);
      }
    }
  </script>
</Layout>
