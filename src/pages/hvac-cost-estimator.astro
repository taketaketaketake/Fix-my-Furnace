</Layout>

<script>
  // Interactive Cost Calculator
  const issueCards = document.querySelectorAll('.issue-card');
  const resultsContainer = document.getElementById('results-container');
  const selectedIssueTitle = document.getElementById('selected-issue-title');
  const priceMinSpan = document.getElementById('price-min');
  const priceMaxSpan = document.getElementById('price-max');
  const priceAvgSpan = document.getElementById('price-avg');
  const issueSelectDropdown = document.querySelector('[name="issue"]');

  const issueLabels = {
    'no-heat': 'No Heat At All',
    'strange-noises': 'Strange Noises',
    'uneven-heating': 'Uneven Heating',
    'high-bills': 'High Energy Bills',
    'cycling': 'Frequent Cycling',
    'replacement': 'Full Furnace Replacement'
  };

  let selectedIssue = '';

  issueCards.forEach(card => {
    card.addEventListener('click', () => {
      // Get data from card
      const issue = card.dataset.issue;
      selectedIssue = issue;
      const priceMin = parseInt(card.dataset.priceMin);
      const priceMax = parseInt(card.dataset.priceMax);
      const priceAvg = parseInt(card.dataset.avg);

      // Update UI
      selectedIssueTitle.textContent = issueLabels[issue];
      priceMinSpan.textContent = priceMin.toLocaleString();
      priceMaxSpan.textContent = priceMax.toLocaleString();
      priceAvgSpan.textContent = priceAvg.toLocaleString();

      // Pre-select the issue in the booking form
      if (issueSelectDropdown) {
        issueSelectDropdown.value = issue;
      }

      // Show results with smooth scroll
      resultsContainer.classList.remove('hidden');

      setTimeout(() => {
        resultsContainer.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }, 100);

      // Visual feedback on selected card
      issueCards.forEach(c => c.classList.remove('ring-4', 'ring-red-500'));
      card.classList.add('ring-4', 'ring-red-500');
    });
  });

  // Listen for form submission success from UniversalForm
  document.addEventListener('formSubmissionSuccess', (event) => {
    if (event.detail?.formId === 'hvac-cost-estimator-form') {
      // Show custom success message for this form
      const formContainer = document.querySelector('#hvac-cost-estimator-form').closest('.bg-white');
      if (formContainer) {
        formContainer.innerHTML = `
