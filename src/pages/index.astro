    primaryBtnLink="/landing_page_1"
    secondaryBtnText="Text Us"
    secondaryBtnLink="tel:+8334948669"
    imageSrc="/Fix_My_Furnace_Hero_Image.png"
  />

  <!-- 🗺️ Service Areas -->
  <ServiceAreasSection />

  <!-- 🏗️ Services Gallery -->
  <GallerySection />

