---
import Layout from "../layouts/Layout.astro";
import HeroHeader from "../components/HeroHeader.astro";
import WhyChooseUs from "../components/WhyChooseUs.astro";
import GetQuoteSection from "../components/GetQuoteSection.astro";
import GallerySection from "../components/GallerySection.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import ServiceAreasSection from "../components/ServiceAreasSection.astro";
---

<Layout title="Fix My Furnace | Fast, Local Furnace Repair & Installation">
  <!-- 🦸‍♂️ Hero Header -->
  <HeroHeader
    title="Detroit’s Trusted Furnace & HVAC Experts"
    description="Fast, licensed, and local furnace repair and installation services across Metro Detroit. Call today to get your heat back on."
    primaryBtnText="Get a Free Quote"
    primaryBtnLink="/landing_page_1"
    secondaryBtnText="Call Now"
    secondaryBtnLink="tel:+13135551234"
    imageSrc="/Fix_My_Furnace_Hero_Image.png"
  />

  <!-- 💪 About / Why Choose Us -->
  <WhyChooseUs />

  <!-- 🧾 Get Quote section -->
  <GetQuoteSection />

  <!-- 🏗️ Services Gallery -->
  <GallerySection />

  <!-- 💬 Testimonials -->
  <TestimonialsSection />

  <!-- 🗺️ Service Areas -->
  <ServiceAreasSection />

  <!-- 🚨 Final CTA Banner -->
  <section class="bg-red-600 text-white py-16 text-center">
    <h3 class="text-3xl font-bold mb-3">Need Heat Fast?</h3>
    <p class="mb-6 text-white/90">
      Our team is standing by to get your furnace back up and running today.
    </p>
    <a
      href="tel:+13135551234"
      class="bg-white text-red-600 font-semibold px-8 py-4 rounded-lg text-lg hover:bg-gray-100 transition"
    >
      Call (313) 555-1234
    </a>
  </section>

  <!-- ⚙️ Footer -->
  <footer class="bg-gray-900 text-gray-300 py-10 text-center">
    <p>© 2025 Fix My Furnace. All rights reserved.</p>
    <div class="mt-4 flex justify-center gap-4 text-sm">
      <a href="#" class="hover:text-white">Privacy Policy</a>
      <a href="#" class="hover:text-white">Terms of Service</a>
      <a href="/landing_page_1" class="hover:text-white">Book Now</a>
    </div>
  </footer>
</Layout>
