---
import Layout from "../layouts/Layout.astro";
import UniversalForm from "../components/UniversalForm.astro";

// Step 1 fields for landing page 1
const step1Fields = [
  {
    name: 'issue',
    type: 'select',
    label: "What's happening with your furnace?",
    required: true,
    options: [
      { value: '', label: 'Select an issue...' },
      { value: 'wont_turn_on', label: "It won't turn on" },
      { value: 'cold_air', label: "It's blowing cold air" },
      { value: 'strange_noises', label: 'Strange noises' },
      { value: 'old_unreliable', label: 'Old or unreliable' },
      { value: 'not_sure', label: 'Not sure' }
    ]
  },
  {
    name: 'urgency',
    type: 'select',
    label: 'When do you need service?',
    required: true,
    options: [
      { value: '', label: 'Select...' },
      { value: 'today', label: 'Today' },
      { value: 'tomorrow', label: 'Tomorrow' },
      { value: 'this_week', label: 'This week' },
      { value: 'within_30_days', label: 'Within the next 30 days' },
      { value: 'within_90_days', label: 'Within the next 90 days' },
      { value: 'just_quotes', label: 'Just getting quotes' }
    ]
  },
  {
    name: 'phone',
    type: 'tel',
    label: 'Phone Number',
    placeholder: 'Phone Number',
    required: true,
    autoComplete: 'tel'
  }
];

// Step 2 fields for landing page 1
const step2Fields = [
  {
    name: 'zip',
    type: 'text',
    label: 'ZIP Code',
    placeholder: 'e.g. 48226',
    required: true,
    maxlength: 5
  },
  {
    name: 'name',
    type: 'text',
    label: 'Full Name',
    placeholder: 'Full Name',
    required: true,
    autoComplete: 'name'
  },
  {
    name: 'email',
    type: 'email',
    label: 'Email Address',
    placeholder: 'Email Address',
    required: false,
    autoComplete: 'email'
  }
];
---

<Layout title="Fix My Furnace Detroit | Same-Day Furnace Repair">
  <!-- üî• Hero / Lead Form Section -->
  <section
    class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-red-50 via-white to-gray-50 text-center px-6 pt-16 pb-16"
  >
    <div class="max-w-3xl mx-auto">
      <h1
        class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4 leading-tight"
      >
        <span class="text-red-600">No Heat?</span> We‚Äôll Fix Your Furnace
        <span class="underline decoration-red-600">Today.</span>
      </h1>

      <p
        class="text-lg md:text-xl text-gray-700 font-semibold mb-10 max-w-2xl mx-auto"
      >
        Fast, licensed, same-day furnace repair from local Metro Detroit HVAC
        pros. Reliable. Honest. Built on Detroit grit.
      </p>
    </div>

    <!-- üßæ Lead Form -->
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md text-left border border-gray-100">
      
      <!-- Step 1 -->
      <div id="step1">
        <h2 class="text-2xl font-bold text-gray-900 mb-2 text-center">Tell Us About Your Furnace</h2>
        <p class="text-gray-600 text-sm text-center mb-6">We'll match you with the right local experts</p>
        
        <form id="step1-form" class="space-y-5">
          {step1Fields.map((field) => (
            <div>
              <label for={field.name} class="block font-bold text-gray-800 mb-2 text-sm uppercase tracking-wide">
                {field.label} {field.required && '*'}
              </label>
              
              {field.type === 'select' ? (
                <select
                  id={field.name}
                  name={field.name}
                  required={field.required}
                  class="w-full border border-gray-300 rounded-lg p-3 text-base focus:ring-2 focus:ring-red-500 focus:border-red-500"
                >
                  {field.options?.map((option) => {
                    const value = typeof option === 'string' ? option.toLowerCase().replace(/\s+/g, '-') : option.value;
                    const label = typeof option === 'string' ? option : option.label;
                    return <option value={value}>{label}</option>;
                  })}
                </select>
              ) : (
                <input
                  type={field.type}
                  id={field.name}
                  name={field.name}
                  placeholder={field.placeholder}
                  required={field.required}
                  maxlength={field.maxlength}
                  autocomplete={field.autoComplete}
                  class="w-full border border-gray-300 rounded-lg p-3 text-base focus:ring-2 focus:ring-red-500 focus:border-red-500"
                />
              )}
            </div>
          ))}
          
          <button
            type="button"
            id="nextStep"
            class="w-full bg-red-600 text-white font-bold py-3 rounded-lg shadow hover:bg-red-700 active:scale-[0.98] transition"
          >
            Continue
          </button>
        </form>
      </div>

      <!-- Step 2 -->
      <div id="step2" class="hidden">
        <h2 class="text-2xl font-bold text-gray-900 mb-2 text-center">Almost Done!</h2>
        <p class="text-gray-600 text-sm text-center mb-6">A local tech will call you within 2 hours</p>
        
        <form id="step2-form" class="space-y-5">
          {step2Fields.map((field) => (
            <div>
              <label for={`step2-${field.name}`} class="block font-bold text-gray-800 mb-2 text-sm uppercase tracking-wide">
                {field.label} {field.required && '*'}
              </label>
              
              <input
                type={field.type}
                id={`step2-${field.name}`}
                name={field.name}
                placeholder={field.placeholder}
                required={field.required}
                maxlength={field.maxlength}
                autocomplete={field.autoComplete}
                class="w-full border border-gray-300 rounded-lg p-3 text-base focus:ring-2 focus:ring-red-500 focus:border-red-500"
              />
            </div>
          ))}
          
          <button
            type="submit"
            id="submitBtn"
            class="w-full bg-red-600 text-white font-bold py-3 rounded-lg shadow hover:bg-red-700 active:scale-[0.98] transition disabled:opacity-50"
          >
            <span id="submitText">Get My Furnace Fixed</span>
            <span id="submitLoading" class="hidden">
              <svg class="animate-spin inline w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Submitting...
            </span>
          </button>
        </form>

        <!-- Success/Error Messages -->
        <div id="formMessages" class="mt-6 hidden">
          <div id="successMessage" class="bg-green-50 border border-green-200 rounded-lg p-4 hidden">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-green-800 font-semibold">Success! A local technician will contact you within 2 hours.</p>
            </div>
          </div>
          
          <div id="errorMessage" class="bg-red-50 border border-red-200 rounded-lg p-4 hidden">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-red-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-red-800 font-semibold">Something went wrong. Please try again or call (833) 494-8669.</p>
            </div>
          </div>
        </div>
      </div>

    </div>

    <!-- ‚úÖ Trust Bar -->
    <div
      class="flex flex-wrap justify-center gap-6 mt-10 text-sm md:text-base font-semibold text-gray-700"
    >
      <div class="flex items-center gap-2">
        <i class="text-red-600">üè†</i> Detroit Local
      </div>
      <div class="flex items-center gap-2">
        <i class="text-red-600">üïí</i> Same-Day Service
      </div>
      <div class="flex items-center gap-2">
        <i class="text-red-600">‚úÖ</i> Licensed & Insured
      </div>
    </div>

    <!-- üß≠ Background Accent -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-red-50/20 via-transparent to-gray-50 pointer-events-none -z-10"
    ></div>
  </section>

  <!-- ‚öôÔ∏è Footer -->
  <footer class="bg-gray-900 text-gray-300 text-center text-sm py-6 mt-10">
    <p>¬© 2025 Fix My Furnace Detroit. All rights reserved.</p>
  </footer>
</Layout>

<!-- üß† Script for 2-step form -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const step1 = document.getElementById("step1");
    const step2 = document.getElementById("step2");
    const nextStepBtn = document.getElementById("nextStep");
    const step1Form = document.getElementById("step1-form");
    const step2Form = document.getElementById("step2-form");
    
    const submitBtn = document.getElementById("submitBtn");
    const submitText = document.getElementById("submitText");
    const submitLoading = document.getElementById("submitLoading");
    const formMessages = document.getElementById("formMessages");
    const successMessage = document.getElementById("successMessage");
    const errorMessage = document.getElementById("errorMessage");

    // Store step 1 data
    let step1Data = {};

    // Step 1 -> Step 2 Navigation
    nextStepBtn.addEventListener("click", (e) => {
      e.preventDefault();
      
      // Get step 1 form data
      const formData = new FormData(step1Form);
      const issue = formData.get('issue');
      const urgency = formData.get('urgency');
      const phone = formData.get('phone');

      // Basic validation
      if (!issue || !urgency || !phone) {
        alert("Please fill in all required fields.");
        return;
      }

      // Store step 1 data
      step1Data = {
        issue: issue,
        urgency: urgency,
        phone: phone
      };

      // Move to step 2
      step1.classList.add("hidden");
      step2.classList.remove("hidden");
    });

    // Message handling functions
    function showMessage(messageType) {
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');
      formMessages.classList.remove('hidden');
      document.getElementById(messageType + 'Message').classList.remove('hidden');
    }

    function setLoadingState(loading) {
      submitBtn.disabled = loading;
      if (loading) {
        submitText.classList.add('hidden');
        submitLoading.classList.remove('hidden');
      } else {
        submitText.classList.remove('hidden');
        submitLoading.classList.add('hidden');
      }
    }

    // Step 2 form submission
    step2Form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      setLoadingState(true);
      
      try {
        // Get step 2 form data
        const step2FormData = new FormData(step2Form);
        const zip = step2FormData.get('zip');
        const name = step2FormData.get('name');
        const email = step2FormData.get('email');

        // Basic validation
        if (!zip || !name) {
          throw new Error('Please fill in all required fields');
        }

        // Combine all form data
        const allFormData = {
          ...step1Data,
          zip: zip,
          name: name,
          email: email || ''
        };

        // Submit to API
        const response = await fetch('/api/submit-form', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ 
            formData: allFormData, 
            formSource: 'landing_page_1' 
          })
        });

        const result = await response.json();

        if (result.success) {
          // Success
          setLoadingState(false);
          showMessage('success');
          step1Form.reset();
          step2Form.reset();
          
          // Hide success message after 7 seconds
          setTimeout(() => {
            formMessages.classList.add('hidden');
            // Reset to step 1
            step2.classList.add("hidden");
            step1.classList.remove("hidden");
            step1Data = {};
          }, 7000);
          
        } else {
          throw new Error(result.error || 'Submission failed');
        }

      } catch (error) {
        console.error('Submission error:', error);
        setLoadingState(false);
        showMessage('error');
        
        // Hide error message after 7 seconds
        setTimeout(() => {
          formMessages.classList.add('hidden');
        }, 7000);
      }
    });
  });
</script>

