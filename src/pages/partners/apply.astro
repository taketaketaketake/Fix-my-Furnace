---
import Layout from "../../layouts/Layout.astro";
import UniversalForm from "../../components/UniversalForm.astro";

const phoneNumber = import.meta.env.TELNYX_PHONE_NUMBER || '+18334948669';

const fields = [
  {
    name: 'business_name',
    type: 'text',
    label: 'Business Name',
    placeholder: 'ABC Heating & Cooling',
    required: true,
  },
  {
    name: 'contact_name',
    type: 'text',
    label: 'Contact Person',
    placeholder: 'John Smith',
    required: true,
    autoComplete: 'name'
  },
  {
    name: 'email',
    type: 'email',
    label: 'Email Address',
    placeholder: 'contact@yourbusiness.com',
    required: true,
    autoComplete: 'email'
  },
  {
    name: 'phone',
    type: 'tel',
    label: 'Phone Number',
    placeholder: '(313) 555-1234',
    required: true,
    autoComplete: 'tel'
  },
  {
    name: 'business_address',
    type: 'text',
    label: 'Business Address',
    placeholder: '123 Main St, Detroit, MI 48201',
    required: false,
    autoComplete: 'street-address'
  },
  {
    name: 'website',
    type: 'text',
    label: 'Website (Optional)',
    placeholder: 'https://yourwebsite.com',
    required: false,
  },
  {
    name: 'service_areas',
    type: 'textarea',
    label: 'Service Areas',
    placeholder: 'Enter cities you serve (e.g., Detroit, Warren, Dearborn, Livonia)',
    required: true
  },
  {
    name: 'services_offered',
    type: 'textarea',
    label: 'Services You Offer',
    placeholder: 'List services (e.g., Furnace Repair, Furnace Installation, Boiler Repair, Emergency HVAC)',
    required: true
  },
  {
    name: 'max_leads_per_week',
    type: 'select',
    label: 'How many leads can you handle per week?',
    options: ['1-5 leads', '5-10 leads', '10-20 leads', '20+ leads'],
    required: true
  },
  {
    name: 'years_in_business',
    type: 'text',
    label: 'Years in Business',
    placeholder: '10',
    required: false
  },
  {
    name: 'license_number',
    type: 'text',
    label: 'License Number (Optional)',
    placeholder: 'MI-HVAC-12345',
    required: false
  },
  {
    name: 'description',
    type: 'textarea',
    label: 'Tell Us About Your Business',
    placeholder: 'Brief description of your business, specialties, and what makes you stand out...',
    required: false
  }
];
---

<Layout
  title="Michigan HVAC Contractor Network | Qualified Furnace Repair Leads | Fix My Furnace Partners"
  description="Join Michigan's contractor-friendly HVAC network. Keep 100% of customer payments. Licensed HVAC professionals get qualified furnace repair, installation leads across Michigan. Apply today."
  keywords="Michigan HVAC contractor leads, furnace repair contractor opportunities Michigan, HVAC business leads Detroit Grand Rapids, Michigan heating contractor network, HVAC technician jobs Michigan"
  noindex={false}
>
  <!-- Structured Data for Job Posting -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "JobPosting",
    "title": "HVAC Contractor - Lead Generation Partner",
    "description": "Join Michigan's contractor-friendly HVAC network. Get qualified furnace repair and installation leads while keeping 100% of customer revenue.",
    "hiringOrganization": {
      "@type": "Organization",
      "name": "Fix My Furnace",
      "url": "https://fixmyfurnacedetroit.com"
    },
    "jobLocation": {
      "@type": "Place",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "MI",
        "addressCountry": "US"
      }
    },
    "datePosted": "2024-01-01",
    "employmentType": "CONTRACTOR",
    "industry": "HVAC Services",
    "occupationalCategory": "47-2111",
    "qualifications": "Licensed Michigan HVAC contractor, insured, experienced in furnace repair and installation"
