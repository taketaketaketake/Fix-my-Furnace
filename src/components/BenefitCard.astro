---
/**
 * BenefitCard.astro
 * Reusable benefit card component with badge icon and customizable content
 */

interface Props {
  title: string;
  description: string;
  className?: string;
}

const { title, description, className = "" } = Astro.props;
---

<div class={`bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 hover:bg-white/15 transition-all ${className}`}>
  <div class="flex items-start gap-4">
    <div class="w-12 h-12 rounded-xl overflow-hidden flex items-center justify-center flex-shrink-0">
      <img 
        src="/fix-my-furnace-badge-transparent.png" 
        alt="Fix My Furnace Badge" 
        class="w-full h-full object-cover scale-150"
      />
    </div>
    <div>
      <h3 class="text-xl font-bold mb-2">{title}</h3>
      <p class="text-gray-300">
        {description}
      </p>
    </div>
  </div>
</div>