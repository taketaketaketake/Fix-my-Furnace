---
/**
 * TrustBar.astro
 * Quick trust indicators bar - shows key metrics and certifications
 */
---

<section class="bg-gray-50 py-12 border-y border-gray-200">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto">

      <!-- Stat 1 -->
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-black text-red-600 mb-2">15+</div>
        <div class="text-sm md:text-base font-semibold text-gray-700">Years Serving</div>
        <div class="text-xs text-gray-500">Michigan</div>
      </div>

      <!-- Stat 2 -->
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-black text-red-600 mb-2">7.5K+</div>
        <div class="text-sm md:text-base font-semibold text-gray-700">Furnaces Fixed</div>
        <div class="text-xs text-gray-500">This Year Alone</div>
      </div>

      <!-- Stat 3 -->
      <div class="text-center">
        <div class="text-4xl md:text-5xl font-black text-red-600 mb-2">&lt;2hr</div>
        <div class="text-sm md:text-base font-semibold text-gray-700">Response Time</div>
        <div class="text-xs text-gray-500">Average</div>
      </div>

      <!-- Stat 4 -->
