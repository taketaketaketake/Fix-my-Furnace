---
const { slug } = Astro.props;

// Efficiency Tips (Global)
const efficiencyTips = [
  { icon: "wind", title: "Replace Filters Monthly", text: "Keep airflow strong and indoor air clean by changing filters regularly." },
  { icon: "vent", title: "Keep Vents Clear", text: "Avoid blocking vents with furniture or rugs to maintain balanced circulation." },
  { icon: "home", title: "Check Insulation", text: "Proper attic and duct insulation reduce heat loss during Michigan winters." },
  { icon: "zap", title: "Upgrade Motors", text: "Variable-speed motors adjust output and use less energy over time." },
  { icon: "thermometer", title: "Use a Smart Thermostat", text: "Automate heating schedules and monitor energy savings remotely." },
  { icon: "calendar", title: "Seasonal Checkups", text: "Spring and fall tune-ups keep your system efficient and reliable." },
];

// Heating System Comparison
const heatingSystems = [
  {
    name: "Furnace",
    image: "/furnace-straight.png",
    pros: ["Heats quickly", "Common in Michigan homes", "Easier repairs"],
    cons: ["Requires ducts", "Dry air"],
    bestFor: "Most suburban homes with existing ductwork.",
  },
  {
    name: "Boiler",
    image: "/boiler-image.png",
    pros: ["Even radiant heat", "Quiet operation", "No ducts needed"],
    cons: ["Slower heat-up time", "Requires annual flush"],
    bestFor: "Older Detroit brick homes and multi-story buildings.",
  },
  {
    name: "Heat Pump",
    image: "/hvac_pros.png",
    pros: ["Dual heating & cooling", "Energy efficient"],
    cons: ["Reduced output in extreme cold"],
    bestFor: "Newer energy-efficient homes or southern Michigan regions.",
  },
];
---

{slug === "duct-cleaning" && (
  <section class="py-24 px-6 md:px-12 bg-gray-50">
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12 items-center">
      <img src="/images/duct_before_after.jpg" alt="Before and after duct cleaning" class="rounded-2xl shadow-xl" />
      <div>
        <h2 class="text-3xl font-extrabold mb-6">See the Difference: Before & After Cleaning</h2>
        <p class="text-gray-700 mb-4">Most Michigan homes collect pounds of dust, dander, and debris in their ducts each year. Cleaning improves airflow and indoor air quality.</p>
        <ul class="text-gray-600 space-y-2">
          <li>‚úÖ Less dust on surfaces</li>
          <li>‚úÖ Improved allergy control</li>
          <li>‚úÖ More efficient heating</li>
        </ul>
      </div>
    </div>
  </section>
)}

{(slug === "furnace-repair" || slug === "furnace-installation" || slug === "maintenance" || slug === "emergency-hvac") && (
  <!-- üî• Heating System Types Comparison -->
  <section class="py-24 px-6 md:px-12 bg-white">
    <div class="max-w-6xl mx-auto text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-4">Which System Heats Your Michigan Home?</h2>
      <p class="text-gray-600 text-lg">Understand your options and find the perfect system for your home's age, size, and comfort needs.</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {heatingSystems.map((sys) => (
        <div class="bg-gray-50 border rounded-2xl p-8 text-left hover:shadow-lg transition">
          <img src={sys.image} alt={sys.name} class="h-20 mb-4 mx-auto" />
          <h3 class="text-2xl font-bold text-gray-900 mb-3">{sys.name}</h3>
          <div class="text-sm mb-4">
            <p class="font-semibold text-gray-700">Pros:</p>
            <ul class="list-disc list-inside text-gray-600 mb-2">
              {sys.pros.map((p) => <li>{p}</li>)}
            </ul>
            <p class="font-semibold text-gray-700">Cons:</p>
            <ul class="list-disc list-inside text-gray-600">
              {sys.cons.map((c) => <li>{c}</li>)}
            </ul>
          </div>
          <p class="text-gray-700 text-sm italic">{sys.bestFor}</p>
        </div>
      ))}
    </div>
  </section>
)}

<!-- SERVICE-SPECIFIC MODULES -->
{slug === "furnace-repair" && (
  <Fragment>
