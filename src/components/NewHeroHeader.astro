---
/**
 * HeroHeader.astro
 * * A high-energy hero section component designed for "Fix My Furnace".
 * Features a split layout with bold typography, call-to-action buttons,
 * and a spot for the brand mascot.
 * * @component
 */

interface Props {
  title?: string;
  description?: string;
  primaryBtnText?: string;
  secondaryBtnText?: string;
  secondaryBtnLink?: string;
  imageSrc?: string;
}

const {
  title = "Heat's Out? We're In!",
  description = "Don't freeze in your own home! Our superheroes are ready to swoop in and restore the warmth. Fast, friendly, and 100% guaranteed.",
  primaryBtnText = "Save My Pipes!",
  secondaryBtnText = "View Our Plans",
  secondaryBtnLink = "/membership",
  imageSrc = "/images/furnace-mascot.png" // Update this path to your actual image
} = Astro.props;
---

<section class="relative bg-yellow-50 overflow-hidden">
  <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 rounded-full bg-red-100 blur-3xl opacity-50 z-0 pointer-events-none"></div>

  <div class="container mx-auto px-6 md:px-12 py-16 md:py-0 min-h-[600px] grid md:grid-cols-2 gap-12 items-center relative z-10">
    
    <div class="space-y-6 text-center md:text-left">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-red-600 to-orange-500">
          {title}
        </span>
      </h1>
      
      <p class="text-lg md:text-xl text-gray-700 max-w-lg mx-auto md:mx-0">
        {description}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start pt-4">
        <a href="/contact" class="group relative inline-block focus:outline-none focus:ring">
          <span class="absolute inset-0 translate-x-1.5 translate-y-1.5 bg-black transition-transform group-hover:translate-y-0 group-hover:translate-x-0 rounded-lg"></span>
          <span class="relative inline-block px-8 py-3 text-sm font-bold uppercase tracking-widest text-white bg-red-600 border-2 border-black rounded-lg group-active:text-opacity-75">
            {primaryBtnText}
          </span>
        </a>

        <a href={secondaryBtnLink} class="group relative inline-block focus:outline-none focus:ring">
          <span class="absolute inset-0 translate-x-1.5 translate-y-1.5 bg-gray-300 transition-transform group-hover:translate-y-0 group-hover:translate-x-0 rounded-lg"></span>
          <span class="relative inline-block px-8 py-3 text-sm font-bold uppercase tracking-widest text-black bg-white border-2 border-black rounded-lg group-active:text-opacity-75">
            {secondaryBtnText}
          </span>
        </a>
      </div>
    </div>

    <div class="relative flex justify-center md:justify-end">
        <div class="absolute inset-0 bg-yellow-400 rounded-full scale-90 blur-xl opacity-20 animate-pulse"></div>
        <img 
          src={imageSrc} 
          alt="Fix My Furnace Mascot" 
          class="relative w-full max-w-md h-auto object-contain transform hover:scale-105 transition-transform duration-300 drop-shadow-2xl"
        />
    </div>

  </div>
</section>