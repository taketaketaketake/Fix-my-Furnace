---
/**
 * Header.astro
 * Fixed responsive header with mobile dropdown.
 * "Call Now" button is visible on desktop, inside dropdown on mobile.
 */
const phoneNumber = import.meta.env.TELNYX_PHONE_NUMBER || '+18334948669';
---

<header id="site-header" class="fixed top-0 left-0 w-full bg-white shadow-sm z-50 transition-all">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 py-4">
    
    <!-- ðŸ”¥ Logo + Brand -->
    <a href="/" class="flex items-center space-x-3">
      <img
        src="/logo.svg"
        alt="Fix My Furnace Logo"
        class="w-10 h-10 object-contain"
      />
      <span
        class="text-2xl sm:text-3xl font-extrabold text-gray-900 tracking-tight whitespace-nowrap"
      >
        Fix My Furnace
      </span>
    </a>

    <!-- ðŸ’ª Desktop Nav -->
    <nav class="hidden md:flex items-center space-x-8 font-bold text-gray-900 text-lg tracking-tight uppercase">
      <a href="/about" class="hover:text-red-600 transition-colors duration-200">How It Works</a>
      <a href="/services" class="hover:text-red-600 transition-colors duration-200">Services</a>
      <a href="/contact" class="hover:text-red-600 transition-colors duration-200">Contact</a>

      <!-- Call / Text Button -->
      <a
        href="/furnace-diagnosis"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-red-600 text-white font-extrabold px-5 py-2.5 rounded-lg text-base hover:bg-red-700 active:scale-[0.98] shadow-md transition"
      >
        Upload Photos Now
      </a>
    </nav>

    <!-- ðŸ“± Mobile Menu Icon -->
    <button
      class="md:hidden text-gray-700 focus:outline-none"
      id="mobileMenuBtn"
      aria-label="Toggle menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>

  <!-- ðŸ“± Mobile Menu -->
  <div id="mobileMenu" class="hidden md:hidden bg-white border-t border-gray-200 shadow-sm">
    <nav class="flex flex-col p-5 space-y-4 text-gray-900 font-bold text-lg uppercase">
      <a href="/about" class="hover:text-red-600 transition-colors">How It Works</a>
      <a href="/services" class="hover:text-red-600 transition-colors">Services</a>
      <a href="/contact" class="hover:text-red-600 transition-colors">Contact</a>

      <a
        href={`tel:${phoneNumber}`}
        class="block text-center bg-red-600 text-white font-extrabold px-4 py-3 rounded-lg hover:bg-red-700 transition mt-3"
      >
        Call Now
      </a>
      <a
      href="/furnace-diagnosis"
      target="_blank"
      rel="noopener noreferrer"
      class="block text-center bg-white-600 text-red border-2 border-solid font-extrabold px-4 py-3 rounded-lg hover:bg-red-700 hover:text-white transition mt-3"
    >
      Upload Photos Now
    </a>
    </nav>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("mobileMenuBtn");
      const menu = document.getElementById("mobileMenu");
      btn?.addEventListener("click", () => menu.classList.toggle("hidden"));
    });
  </script>
</header>
