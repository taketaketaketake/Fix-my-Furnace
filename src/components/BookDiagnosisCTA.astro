---
/**
 * BookDiagnosisCTA.astro
 * Reusable CTA component for booking $125 professional diagnosis
 */
const phoneNumber = import.meta.env.TELNYX_PHONE_NUMBER || '+18334948669';
---

<div class="bg-gradient-to-br from-red-600 via-red-700 to-orange-600 rounded-2xl p-8 md:p-12 text-white text-center">
  <h3 class="text-3xl md:text-4xl font-black mb-4">
    Ready to Get Your Exact Price?
  </h3>
  <p class="text-xl text-red-100 mb-8 max-w-2xl mx-auto">
    Book your $125 professional diagnosis. We'll identify the exact problem and connect you with the right qualified provider for your needs.
  </p>
  <div class="max-w-md mx-auto mb-8">
    <a
      href="#booking-form"
      class="block bg-yellow-400 text-gray-900 px-10 py-6 rounded-2xl font-black text-2xl hover:bg-yellow-300 transition-all shadow-2xl hover:scale-105"
    >
      Book My $125 Diagnosis →
    </a>
    <p class="text-sm text-red-100 mt-4">
      Or call: <a href={`tel:${phoneNumber}`} class="underline hover:text-white font-bold">(833) FIX-IT-NOW</a>
    </p>
  </div>

  <!-- Stats Section -->
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-6 text-center border-t border-red-500/30 pt-8">
    <div>
      <div class="text-2xl md:text-3xl font-black text-yellow-300 mb-1">4.9★</div>
      <div class="text-sm text-red-100">Rating</div>
    </div>
    <div>
      <div class="text-2xl md:text-3xl font-black text-yellow-300 mb-1">1,200+</div>
      <div class="text-sm text-red-100">Reviews</div>
    </div>
    <div>
      <div class="text-2xl md:text-3xl font-black text-yellow-300 mb-1">&lt;2 Hr</div>
      <div class="text-sm text-red-100">Avg Response</div>
    </div>
    <div>
      <div class="text-2xl md:text-3xl font-black text-yellow-300 mb-1">7,500+</div>
      <div class="text-sm text-red-100">Jobs in 2024</div>
    </div>
  </div>
</div>